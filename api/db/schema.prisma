datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = "native"
}

model Book {
  id            Int      @id @default(autoincrement())
  title         String
  author        String
  description   String?
  category      String
  image         String?
  cover         Boolean?
  dateAdded     DateTime @default(now())
}
